{% extends 'base.html.twig' %}
{% block title %} {{object.name}} {% endblock %}
{% block body %}
{{ include('@navbars/collectornavbar.twig') }}
<center><h2>{{object.name}}</h2></center>
<div class="container text-center">
    <video width="1200" height="700" controls poster="/collectors/{{object.poster}}">
        <source src="/collectors/{{object.src}}" type="video/mp4">
    </video>
</div>
<center><h2>Stars</h2></center>
<center>{{object.description}}</center>
<center><h2>Covers</h2></center>
<div class="container text-center">
  <div class="row">
    <div class="col">
      <img src="/collectors/{{object.cover}}" width="300" height="500">
    </div>
    <div class="col">
      Column
    </div>
    <div class="col">
      Column
    </div>
    <div class="col">
      Column
    </div>
  </div>
</div>
<center><h2>Deteils</h2></center>
<div class="container text-center">
    <table class="table table-bordered">
    <tbody>
        <tr>
            <td>
                Id
            </td>
            <td>
                {{object.id}}
            </td>
        </tr>
        <tr>
            <td>
                Name
            </td>
            <td>
                {{object.name}}
            </td>
        </tr>
        <tr>
            <td>
                Show name
            </td>
            <td>
                {{object.getShowName()}}
            </td>
        </tr>
        <tr>
            <td>
                Series
            </td>
            <td>
                <a href={{path('SeriesDetail',{id:object.getSerie().getId(),collector:Collector})}}>{{object.getSerie().getDetelName()}}</a>
            </td>
        </tr>
        <tr>
            <td>
                Dir
            </td>
            <td>
                {{object.dir}}
            </td>
        </tr>
        <tr>
            <td>
                Src
            </td>
            <td>
                {{object.src}}
            </td>
        </tr>
        <tr>
            <td>
                Country
            </td>
            <td>
                {{object.getCountry()}}
            </td>
        </tr>
        <tr>
            <td>
                Cover
            </td>
            <td>
                {{object.getCover()}}
            </td>
        </tr>
        <tr>
            <td>
                Poster
            </td>
            <td>
                {{object.getPoster()}}
            </td>
        </tr>
        <tr>
            <td>
                Back Cover
            </td>
            <td>
                {{object.getBackCover()}}
            </td>
        </tr>
    </tbody>
    </table>
</div>
<center><h2>Galery</h2></center>

{% endblock %}



