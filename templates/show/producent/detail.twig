{% extends 'base.html.twig' %}
{% block title %} {{object.name}} {% endblock %}
{% block body %}
{{ include('@navbars/collectornavbar.twig') }}
    <div class="container text-center">
        <h2>{{object.getDetelName()}}</h2>
        <div class="row">
            <div class="col">
            <img src="{{ object.avatar|photo }}" width="250" height="250">
            </div>
            <div class="col">
            <table class="table table-bordered">
                <tbody>
                     <tr>
                        <td>
                            Id
                        </td>
                        <td>
                            {{object.id}}
                        </td>
                    </tr>
                    <tr>
                        <td>
                            Name
                        </td>
                        <td>
                            {{object.name}}
                        </td>
                    </tr>
                    <tr>
                        <td>
                            Show name
                        </td>
                        <td>
                            {{object.getShowName()|empty}}
                        </td>
                    </tr>
                    <tr>
                        <td>
                            Dir
                        </td>
                        <td>
                            {{object.dir}}
                        </td>
                    </tr>
                    <tr>
                        <td>
                            Country
                        </td>
                        <td>
                            {{object.getCountry()|empty}}
                        </td>
                    </tr>                    
                </tbody>
            </table>
           {{object.description}}
            </div>
        </div>
        <div class="row">
        <a href={{path('ProducnetTopStars',{id:object.id,collector:Collector})}}>
            <h2>Top Stars</h2>
        </a>
            <div class="container text-center">
                <div class="row">
                {% for TopStar in TopStars %}
                    <div class="col">
                    <a href="{{path('StarInSeriesMovieList',{star:TopStar.dirname,collector:Collector,seriesid:object.id})}}">
                        <img src="{{TopStar.avatar|photo('star')}}" width="160" height="80" class="img-thumbnail" alt="{{TopStar.dirname}}"><br>
                        {{TopStar.dirname}}
                    </a>
                    </div>
                {% endfor %}
                </div>
            </div>
        </div>
        <div class="row">
             <a href={{path('SeriessPhotos',{id:object.id,collector:Collector})}}>
            <h2>Photos<h2>
        </a>
        <br>
            {% for Photo in photos %}
                <img src="{{Photo}}" width="160" height="80" class="img-thumbnail" alt="{{Photo}}">
            {% endfor %}
        </div>
                <div class="row">
        <a href={{path('SeriessBanner',{id:object.id,collector:Collector})}}>
        <h2>Banners<h2>
        </a>
        <br>
            {% for banner in banners %}
                <img src="{{banner}}" width="860" height="200" class="img-thumbnail" alt="{{banner}}">
            {% endfor %}
        </div>
        <div class="row">
            <a href="{{path('SeriesMovies',{id:object.id,collector:Collector})}}">
                <h2>Movies</h2>
            </a>
        </div>
        <h2>Series</h2>
        <ul>
            <table class="table">
            <thead>
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">Name</th>
                </tr>
            </thead>
            <tbody>
                {% for Serie in Series %}
                <tr>
                    <th scope="row">{{Serie.id}}</th>
                    <td><a href={{path('SeriesDetail',{id:Serie.id,collector:Collector})}}>{{Serie.name}}</td>
                </tr>
                {% endfor %}
            </tbody>
            </table>
        </ul>
        <h2>Movies</h2>
        <ul>
            <table class="table">
            <thead>
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">Name</th>
                </tr>
            </thead>
            <tbody>
                {% for el in Movies %}
                <tr>
                    <th scope="row">{{el.id}}</th>
                    <td><a href={{path('MoviesDeteil',{id:el.id,collector:Collector})}}>{{el.name}}</td>
                </tr>
                {% endfor %}
            </tbody>
            </table>
        </ul>
    </div>
{% endblock %}